<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <!-- project information -->
  <name>DaoLayer</name>
  <description>A dao layer that use JPA managed objects from a database.</description>
  <url>https://github.com/emfinfo/daolayer</url>

  <!-- project build information -->
  <groupId>ch.emf.info</groupId>
  <artifactId>daolayer</artifactId>
  <version>6.1.5</version>  
  <packaging>jar</packaging>
  
  <!-- maven project properties -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>

  <!-- additional repositories -->
  <repositories>
    <repository>
      <id>emfinfo</id>
      <name>emfinfo.github.io</name>
      <url>http://emfinfo.github.io/javalibs/releases</url>
    </repository>
    <repository>
      <url>http://download.eclipse.org/rt/eclipselink/maven.repo/</url>
      <id>eclipselink</id>
      <layout>default</layout>
      <name>Repository for library EclipseLink</name>
    </repository>
  </repositories>

  <!-- dependencies -->
  <dependencies>

    <dependency>
      <groupId>com.google.inject</groupId>
      <artifactId>guice</artifactId>
      <version>4.2.3</version> <!-- may 2020 -->
    </dependency>

    <dependency>
      <groupId>org.eclipse.persistence</groupId>
      <artifactId>org.eclipse.persistence.jpa</artifactId>
      <version>2.7.7</version> <!-- may 2020 -->
    </dependency>

    <dependency>
      <groupId>javax.ejb</groupId>
      <artifactId>javax.ejb-api</artifactId>
      <version>3.2</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.7.30</version> <!-- dec 2019 -->
    </dependency>
    
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.1</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.12</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>ch.jcsinfo.libs</groupId>
      <artifactId>basiclib</artifactId>
      <version>1.5.2</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>[8.0.16,)</version>
      <scope>test</scope>
    </dependency>    

  </dependencies>

  <!-- build plugins -->
  <build>
    <plugins>

      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.1</version>
      </plugin>
      
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.2.0</version> 
        <configuration>
          <tags>
            <tag>
              <name>tagvalue</name>
            </tag>
            <tag>
              <name>composed</name>
            </tag>
            <tag>
              <name>has</name>
            </tag>
            <tag>
              <name>depend</name>
            </tag>
            <tag>
              <name>hidden</name>
            </tag>
            <tag>
              <name>stereotype</name>
            </tag>
            <tag>
              <name>match</name>
            </tag>
            <tag>
              <name>opt</name>
            </tag>
            <tag>
              <name>view</name>
            </tag>
            <tag>
              <name>note</name>
            </tag>
          </tags>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>3.0.0-M1</version>
      </plugin>

      <plugin>
        <groupId>net.ju-n.maven.plugins</groupId>
        <artifactId>checksum-maven-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <goals>
              <goal>files</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <fileSets>
            <fileSet>
              <directory>target</directory>
              <includes>
                <include>*.pom</include>
                <include>*.jar</include>
              </includes>
            </fileSet>
          </fileSets>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.9.1</version>
      </plugin>       

    </plugins>
  </build>

  <!-- HTML reporting with "mvn site" -->
  <reporting>
    <plugins>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>        
        <artifactId>maven-javadoc-plugin</artifactId>
        <!-- attention, la branche 3.x.y ne fonctionne pas avec UMLgraph -->         
        <version>2.10.4</version>
        <configuration>
          <doclint>none</doclint>
          <tags>
            <tag>
              <name>tagvalue</name>
            </tag>
            <tag>
              <name>composed</name>
            </tag>
            <tag>
              <name>has</name>
            </tag>
            <tag>
              <name>depend</name>
            </tag>
            <tag>
              <name>hidden</name>
            </tag>
            <tag>
              <name>stereotype</name>
            </tag>
            <tag>
              <name>match</name>
            </tag>
            <tag>
              <name>opt</name>
            </tag>
            <tag>
              <name>view</name>
            </tag>
            <tag>
              <name>note</name>
            </tag>
          </tags>
          <doclet>org.umlgraph.doclet.UmlGraphDoc</doclet>
          <docletArtifact>
            <groupId>org.umlgraph</groupId>
            <artifactId>umlgraph</artifactId>
            <version>5.6.6</version>
          </docletArtifact>
          <useStandardDocletOptions>true</useStandardDocletOptions>
          <additionalparam>-dotexecutable /usr/local/bin/dot</additionalparam>
          <additionalparam>-nodefillcolor gray97</additionalparam>
          <additionalparam>-nodefontsize 9</additionalparam>
          <additionalparam>-nodefontclassname Monaco</additionalparam>
          <additionalparam>-nodefontclasssize 14</additionalparam>
          <additionalparam>-nodesep 1.0</additionalparam>
          <additionalparam>-edgefontsize 48</additionalparam>
          <additionalparam>-edgefontcolor red</additionalparam>
          <additionalparam>-edgecolor forestgreen</additionalparam>
          <additionalparam>-quiet -views -all</additionalparam>
        </configuration>
      </plugin>
      
      <plugin>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <dependencyLocationsEnabled>false</dependencyLocationsEnabled>
          <dependencyDetailsEnabled>true</dependencyDetailsEnabled>
        </configuration>        
      </plugin>       
      
    </plugins>
  </reporting>

  <!-- licenses -->
  <licenses>
    <license>
      <name>MIT License</name>
      <url>http://www.opensource.org/licenses/MIT</url>
    </license>
  </licenses>

  <!-- developers -->
  <developers>
    <developer>
      <id>STT</id>
      <name>Jean-Claude Stritt</name>
      <email>jcsinfo@hispeed.ch</email>
      <organization>JCSINFO</organization>
      <organizationUrl>https://www.jcsinfo.ch</organizationUrl>
      <roles>
        <role>engineer</role>
        <role>developer</role>
      </roles>
      <timezone>Europe/Switzerland</timezone>
      <properties>
        <picUrl>https://www.jcsinfo.ch/pic/jcs01-square.jpg</picUrl>
      </properties>
    </developer>

    <developer>
      <id>PAM</id>
      <name>Pierre-Alain Mettraux</name>
      <email>mettrauxpa@edufr.ch</email>
      <organization>EMF</organization>
      <organizationUrl>http://www.emf.ch</organizationUrl>
      <roles>
        <role>engineer</role>
        <role>developer</role>
      </roles>
      <timezone>Europe/Switzerland</timezone>
      <properties>
        <picUrl>https://www.jcsinfo.ch/pic/pam01-square.jpg</picUrl>
      </properties>
    </developer>

  </developers>

</project>